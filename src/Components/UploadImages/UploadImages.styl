/**
 * UploadImages
 */

#dcfb-images_to_upload
	padding 30px 20px 20px
	background rgba(255,255,255,.8)
	display flex
	flex-direction column
	color rgba(0,0,0,0.8)

	span
	button
		align-self flex-end
		font-size .95em

	span
		line-height 2.7
		padding 0 10px
		font-weight 500
		cursor pointer

	p
		margin 0
		margin-bottom 15px

		&:last-child
			margin-bottom 0
